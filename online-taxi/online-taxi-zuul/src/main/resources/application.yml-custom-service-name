# Custom service name
# Demo features:
# 1. Custom service name configuration


zuul:
  routes:
    # This name can be arbitrary
    custom-zuul-name:
      path: /zuul-custom-name/**
      url: http://localhost:9002/


server:
  port: 9100

spring:
  application:
    name: online-taxi-zuul

  # Zipkin
  zipkin:
    base-url: http://localhost:9411/
    # Sampling rate: 1 (8% sampling)
  sleuth:
    sampler:
      rate: 1
# Registry center
eureka:
  client:
    # Set service registry center URL
    service-url:
      defaultZone: http://${EUREKA_USER:admin}:${EUREKA_PASSWORD:admin}@eureka-7900:7900/eureka/
  instance:
    hostname: localhost
    instance-id: online-taxi-zuul

management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      ## Default is never
      show-details: ALWAYS
      enabled: true
    routes:
      enabled: true

logging:
  level:
    com.netflix: debug
    org.springframework: DEBUG
