# Custom service name configuration with load balancing
# Demo features:
# 1. Custom service name with load balancing


zuul:
  routes:
    # This name can be arbitrary
    custom-zuul-name:
      path: /zuul-custom-name/**
      service-id: no-eureka-api-driver
# Not a eureka service-id, custom defined, can be any name
no-eureka-api-driver:
  ribbon:
    listOfServers: localhost:9003,localhost:9002
ribbon:
  eureka:
    enabled: false

server:
  port: 9100

spring:
  application:
    name: rydr-zuul

  # Zipkin
  zipkin:
    base-url: http://localhost:9411/
    # Sampling rate: 1 (8% sampling)
  sleuth:
    sampler:
      rate: 1
# Registry center
eureka:
  client:
    # Set service registry center URL
    service-url:
      defaultZone: http://${EUREKA_USER:admin}:${EUREKA_PASSWORD:admin}@eureka-7900:7900/eureka/
  instance:
    hostname: localhost
    instance-id: rydr-zuul

management:
  endpoints:
    web:
      exposure:
        include: "*"
  endpoint:
    health:
      ## Default is never
      show-details: ALWAYS
      enabled: true
    routes:
      enabled: true

logging:
  level:
    com.netflix: debug
    org.springframework: DEBUG
