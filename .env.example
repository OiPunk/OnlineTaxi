# ===========================================
# Rydr Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to version control.

# --- Database ---
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=changeme
DB_NAME=rydr
DB_NAME_THREE=rydr-three

# --- Redis ---
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Redis Sentinel (optional) ---
SENTINEL_HOST_1=127.0.0.1
SENTINEL_PORT_1=26379
SENTINEL_HOST_2=127.0.0.1
SENTINEL_PORT_2=26479
SENTINEL_HOST_3=127.0.0.1
SENTINEL_PORT_3=26579
SENTINEL_MASTER=mymaster

# --- Eureka Service Registry ---
EUREKA_USER=admin
EUREKA_PASSWORD=changeme
EUREKA_HOST=localhost

# --- JWT Authentication ---
JWT_SECRET=replace-with-a-strong-random-secret-key

# --- Spring Boot Admin ---
ADMIN_USER=admin
ADMIN_PASSWORD=changeme

# --- Email Notifications (Spring Boot Admin) ---
MAIL_SMTP_HOST=smtp.example.com
MAIL_USERNAME=user@example.com
MAIL_PASSWORD=changeme
MAIL_TO=admin@example.com
MAIL_FROM=noreply@example.com

# --- RabbitMQ (Config Bus) ---
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# --- ActiveMQ (JMS Messaging) ---
ACTIVEMQ_HOST=127.0.0.1
ACTIVEMQ_PORT=61616
ACTIVEMQ_USER=admin
ACTIVEMQ_PASSWORD=changeme

# --- Zipkin (Distributed Tracing) ---
ZIPKIN_URL=http://localhost:9411/

# --- Config Server Git Repository ---
CONFIG_GIT_URI=https://github.com/oi/rydr-config-profile
CONFIG_GIT_USERNAME=
CONFIG_GIT_PASSWORD=
